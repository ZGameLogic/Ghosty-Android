<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--
    Begin evidence list elements
    -->

    <!--evidenceListString represents the TextView for text for all toggles-->
    <TextView
        android:id="@+id/evidenceListString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="evidence view"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"/>

    <!--
    Begin ghost list elements
    -->

    <!-- Name of ghost -->
    <TextView
        android:id="@+id/ghostListName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="evidence view"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="gone"/>

    <!-- Three textviews specifying this ghost's evidence types -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ghostListName"
        android:id="@+id/ghostEvRow"
        android:visibility="gone">

        <TextView
            android:id="@+id/ghostEv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ghost evidence 1"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/ghostEv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ghost evidence 2"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/ghostEv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ghost evidence 3"
            android:textAlignment="center"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>